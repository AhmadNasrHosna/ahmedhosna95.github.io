<nav class="site-header__navbar">

  <ul class="list menu-on-right">
    {%- for nav in collections.nav | sort(attribute="date") -%}

      {% if nav.data.navtitle == 'About' %}
        <li>
          <a href="{{ nav.url | url }}" {% if nav.url == page.url %} {% endif %}>{{ nav.data.navtitle }}</a>
        </li>
      {% endif %}

      {% if nav.data.navtitle == 'Contact' %}
        <li>
          <a href="{{ nav.url | url }}" {% if nav.url == page.url %} data-current="current item" {% endif %}>{{ nav.data.navtitle }}</a>
        </li>
      {% endif %}

    {%- endfor -%}
  </ul>

  <ul class="list menu-on-left">
    {%- for nav in collections.nav | sort(attribute="date") -%}
        {% if nav.data.navtitle != 'Contact' %}
          {% if nav.data.navtitle != 'About' %}

            <li>
              <a href="{{ nav.url | url }}" {% if nav.url == page.url %} data-current="current item" {% endif %}>{{ nav.data.navtitle }}</a>
            </li>

          {% endif %}
        {% endif %}
    {%- endfor -%}
  </ul>
</nav>

