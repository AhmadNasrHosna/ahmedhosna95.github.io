<ul class="articles list carousel" data-flickity='{ "groupCells": 1, "contain": true, "pageDots": false }' style="counter-reset: start-from {{ postslist.length + 1 }}">
  
  {% for post in postslist | reverse %}
    <li class="entry carousel-cell" {% if post.url == url %} data-current="current item" {% endif %}>
      
      <h3 class="entry__title">
        <a href="{{ post.url | url }}">
          <span>
          {% if post.data.title %}
            {{ post.data.title }}
          {% else %}
						Untitled
					{% endif %}
          </span>
        </a>
      </h3>

      <div class="entry__meta">
      
        <time class="entry__date" datetime="{{ post.date | machineDate }}">
          <small>{{ post.date | readableDate }}</small>
        </time>

        {% if post.data.tags %}
        <div class="entry__tags">
          {% for tag in post.data.tags %}
            {%- if tag != "post" -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a href="{{ tagUrl | url }}" rel="tag">
                <span>#{{ tag }}</span>
              </a>
            {%- endif -%}
          {% endfor %}
        </div>
      {% endif %}

      </div>
      
    </li>
  {% endfor %}
</ul>